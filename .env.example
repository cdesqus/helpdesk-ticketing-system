# IDESOLUSI Helpdesk System Environment Configuration
# Copy this file to .env and update the values

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL=postgres://helpdesk_user:helpdesk_password@postgres:5432/helpdesk
POSTGRES_PASSWORD=helpdesk_password_change_this_in_production

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://:helpdesk_redis_password@redis:6379
REDIS_PASSWORD=helpdesk_redis_password_change_this_in_production

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
# JWT Secret - CHANGE THIS IN PRODUCTION!
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ==============================================
# SMTP EMAIL CONFIGURATION (Optional)
# ==============================================
# Gmail Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Office 365 Configuration
# SMTP_HOST=smtp.office365.com
# SMTP_PORT=587
# SMTP_USER=your-email@company.com
# SMTP_PASS=your-password

# Custom SMTP Configuration
# SMTP_HOST=mail.your-domain.com
# SMTP_PORT=587
# SMTP_USER=helpdesk@your-domain.com
# SMTP_PASS=your-password

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NODE_ENV=production
PORT=4000

# ==============================================
# DOMAIN & SSL CONFIGURATION
# ==============================================
# Your domain name (for production)
DOMAIN_NAME=helpdesk.your-domain.com

# SSL Certificate paths (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ==============================================
# BACKUP CONFIGURATION
# ==============================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# ==============================================
# MONITORING & LOGGING
# ==============================================
LOG_LEVEL=info
ENABLE_METRICS=true

# Grafana admin password
GRAFANA_PASSWORD=admin123_change_this_in_production

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
# Set to true for development mode
DEBUG=false
ENABLE_CORS=false

# ==============================================
# CLOUD STORAGE (Optional)
# ==============================================
# AWS S3 Configuration for backups
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=your-backup-bucket
# AWS_REGION=us-east-1

# ==============================================
# NOTIFICATION SETTINGS (Optional)
# ==============================================
# Slack webhook for deployment notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# Email for system alerts
# ADMIN_EMAIL=admin@your-domain.com
